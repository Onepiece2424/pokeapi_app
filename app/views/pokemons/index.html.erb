<h1>Pokemon</h1>
<%= render "shared/search", { path: search_path } %>
<div>
  <h3>ゲットしたポケモン</h3>
  <% if @pokemons.present? %>
    <% @pokemons.each do |pokemon| %>
      <div style="display: inline-block;">
        No. <%= pokemon.order %>,
        Name: <%= pokemon.name %>
        <div>
          <%= image_tag(pokemon.image_url, size: "200") %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
<div><%= link_to "アイテムページへ", items_path %></diV>
